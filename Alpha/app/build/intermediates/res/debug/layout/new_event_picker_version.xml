<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/abc_config_prefDialogWidth"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">
    <EditText
        android:id="@+id/title_"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/event_title"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/title_color"
        android:textStyle="italic"
        android:gravity="center_vertical" />
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
      android:layout_marginTop="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/time_display"
        android:text="12:00"
        android:onClick="show_timePicker"
        android:textSize="20dp"
        android:textColor="@color/text_color"
        android:layout_weight="0.5"
        android:gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/date_display"
        android:text="1-1-1971"
        android:onClick="show_datePicker"
        android:textSize="20dp"
        android:textColor="@color/text_color"
        android:layout_weight="0.5"
        android:gravity="center" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        style="?android:attr/buttonBarStyle"
        android:background="#6d36d1df">
        <Button

            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/done"
            android:id="@+id/done_butt"
            android:onClick="add_event"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_gravity="top"
            android:clickable="true"
            android:shadowColor="#ff5192ff"
            android:layout_weight="0.5"
            android:textColor="#ff176b8e"
            android:textStyle="bold"
            android:gravity="center" />
        <Button
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/cancel"
            android:id="@+id/cancel_butt"
            android:onClick="go_back"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="0.5"
            android:textColor="#ff176b8e"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
